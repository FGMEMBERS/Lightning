<?xml version="1.0"?>

<!-- Flaps Position -->
<PropertyList> 
	<path>flaps.ac</path>
	<animation>
		<type>rotate</type>
		<object-name>flaps_needle</object-name>
		<property>surface-positions/flap-pos-norm</property>
		<factor>180</factor>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis> 
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

   <animation> 
      <type>material</type>
      <emission> 
        <factor-prop>controls/lighting/panel-norm</factor-prop>
        <red>0.75</red>
        <green>0.25</green>
        <blue>0.25</blue>
      </emission>
    </animation>
  
  <!-- *** LoD *** -->
    <animation> 
      <type>range</type>
      <min-m>0</min-m>
      <max-m>5</max-m>
    </animation>
</PropertyList>
