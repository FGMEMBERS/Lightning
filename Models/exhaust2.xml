<?xml version = '1.0' ?>
<PropertyList>

	<!-- Exhaust no2 -->

	<path>exhaust.ac</path>

	<animation>
		<type>select</type>
		<object-name>noshadow.Exhaust</object-name>
		<object-name>noshadow.Exhaust1</object-name>
		<object-name>noshadow.Exhaust3</object-name>
		<condition>
			<greater-than>
				<property>engines/engine[1]/n1</property>
				<value>1</value>
			</greater-than>
		</condition>
	</animation>

	<animation>
		<type>shader</type>
		<shader>heat-haze</shader>
		<object-name>noshadow.Exhaust3</object-name>
		<factor>0.12</factor>
		<speed-prop>engines/engine[1]/n1</speed-prop>
	</animation>

	<animation>
		<type>scale</type>
		<object-name>noshadow.Exhaust3</object-name>
		<property>engines/engine[1]/n1</property>
		<x-offset>1</x-offset>
		<y-offset>1</y-offset>
		<z-offset>1</z-offset>
		<x-factor>0.001</x-factor>
		<y-factor>-0.002</y-factor>
		<z-factor>-0.002</z-factor>
	</animation>

	<animation>
		<type>select</type>
		<object-name>noshadow.Exhaust</object-name>
		<object-name>noshadow.Exhaust1</object-name>
		<condition>
			<and>
				<property>engines/engine[1]/augmentation</property>
				<greater-than>
					<property>sim/current-view/view-number</property>
					<value>0</value>
				</greater-than>
			</and>
		</condition>
	</animation>

	<animation>
		<type>spin</type>
		<object-name>exhaust</object-name>
		<property>engines/engine[1]/n1</property>
		<factor>10</factor>
		<x-offset>0</x-offset>
		<y-offset>0</y-offset>
		<z-offset>0</z-offset>
		<center>
			<x-m>16.2709</x-m>
			<y-m>0</y-m>
			<z-m>-0.43068</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>scale</type>
		<object-name>noshadow.Exhaust</object-name>
		<object-name>noshadow.Exhaust1</object-name>
		<property>controls/engines/engine[1]/throttle</property>
		<interpolation>
			<entry>
				<ind>0.88</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>0.9</ind>
				<dep>0.93</dep>
			</entry>
			<entry>
				<ind>1.0</ind>
				<dep>1.0</dep>
			</entry>
		</interpolation>
	</animation>

	<animation>
		<type>noshadow</type>
		<object-name>exhaust</object-name>
	</animation>

</PropertyList>
