<?xml version="1.0"?>

<!-- U/C switches -->

<PropertyList>

 <path>undercarriage-up-down.ac</path>

<!-- **************** gear-up **************** -->

<animation>
	<type>rotate</type>
	<object-name>up-guard</object-name>
	<property>sim/model/lightning/controls/gear-guard-open</property>
	<factor>90</factor>
	<center>
	<x-m>0.0212157</x-m>
	<y-m>-0.00810573</y-m>
	<z-m>0.0246744</z-m>
	</center>
	<axis>
		<x>0</x>
		<y>0</y>
		<z>-1</z>
	</axis>
</animation>

<animation>
  <type>translate</type>
  <object-name>up-button</object-name>
  <property>sim/model/lightning/controls/gear-down</property>
  <interpolation>
   <entry><ind>0</ind><dep>0.01</dep></entry>
   <entry><ind>1</ind><dep>0</dep></entry>
  </interpolation>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>  
</animation>
 
  <!-- **************** gear-down **************** -->
<animation>
  <type>translate</type>
  <object-name>down-button</object-name>
  <property>sim/model/lightning/controls/gear-down</property>
  <interpolation>
   <entry><ind>0</ind><dep>0.01</dep></entry>
   <entry><ind>1</ind><dep>0</dep></entry>
  </interpolation>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 
<animation> 
	<type>material</type>
	<object-name>mount</object-name>
	<emission> 
		<factor-prop>/controls/lighting/panel-norm</factor-prop>
			<red>0.075</red>
			<green>0.025</green>
			<blue>0.025</blue>
	</emission>
</animation>
 
 
 
<!-- *** LoD *** -->
 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>5</max-m>
 </animation>
</PropertyList>
