	<!-- Chute Jettison -->
    <action>
     <button>0</button>
     <x>-200</x>
     <y>450</y>
     <w>30</w>
     <h>45</h>
     <binding>
      <command>property-assign</command>
      <property>controls/switches/chute_jett</property>
      <value type="int">1</value>
     </binding>
     <binding>
      <command>property-assign</command>
		<condition>
			<greater-than>
				<property>/systems/electrical/outputs/chute_jett</property>
				<value>20</value>
			</greater-than>
		</condition>
      <property>sim/model/lightning/controls/flight/chute_jettisoned</property>
      <value type="int">1</value>
     </binding>
     <binding>
      <command>property-assign</command>
		<condition>
