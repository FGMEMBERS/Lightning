				<value>20</value>
			</greater-than>
		</condition>
      <property>sim/model/lightning/controls/flight/chute_open</property>
      <value type="int">0</value>
     </binding>
     <mod-up>
      <binding>
      <command>property-assign</command>
      <property>controls/switches/chute_jett</property>
      <value type="int">0</value>
      </binding>
     </mod-up>
