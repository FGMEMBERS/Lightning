<?xml version="1.0"?>
<!DOCTYPE PropertyList SYSTEM "panel.dtd">

<PropertyList>

	<name>Port floor hotspots</name>
	<background>Aircraft/Generic/Panels/Textures/transparent-bg.rgb</background>
	<x>0</x>
	<y>0</y>
	<w>500</w>
	<h>1000</h>
	<y-offset>0</y-offset>
	<instruments>
		<instrument>
			<x>250</x>
			<y>500</y>
			<w>500</w>
			<h>1000</h>
			<w-base>500</w-base>
			<h-base>1000</h-base>
			<layers>
				<layer>
					<name>background</name>
					<texture>
						<path>Aircraft/Generic/Panels/Textures/transparent-bg.rgb</path>
						<x1>0.0</x1>
						<y1>0.0</y1>
						<x2>1.0</x2>
						<y2>1.0</y2>
					</texture>
				</layer>
			</layers>

			<actions>
				<!-- Ventral Tank Jettison -->
				<action>
					<button>0</button>
					<x>-50</x>
					<y>-30</y>
					<w>200</w>
					<h>90</h>
					<binding>
						<command>nasal</command>
						<script>Lightning.emergencyGearDown(1)</script>
					</binding>
				</action>
			</actions>
		</instrument>
	</instruments>

</PropertyList>

