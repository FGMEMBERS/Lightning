<?xml version="1.0"?>
 
<PropertyList>

 <fx>
  <avpin0>
   <name>AVPIN pump</name>
   <path>Aircraft/Lightning/Sounds/avpin_pump.wav</path>
   <property>/sim/model/lightning/engines/engine[0]/avpin_flowing</property>
   <orientation>
    <x>0.0</x>
    <y>0.0</y>
    <z>180.0</z>
    <inner-angle>180.0</inner-angle>
    <outer-angle>360.0</outer-angle>
    <outer-gain>0.2</outer-gain>
   </orientation>
   <volume>
    <property>/sim/current-view/internal</property>
    <offset>1</offset>
    <factor>-0.2</factor>
   </volume>
  </avpin0>
  <combustion0>
   <name>combustion</name>
   <path>Aircraft/Lightning/Sounds/avpin_combustion.wav</path>
   <property>/sim/model/lightning/engines/engine[0]/combustion</property>
   <orientation>
    <x>0.0</x>
    <y>0.0</y>
    <z>180.0</z>
    <inner-angle>180.0</inner-angle>
    <outer-cone>360.0</outer-cone>
    <outer-gain>0.2</outer-gain>
   </orientation>
   <volume>
    <property>/sim/current-view/internal</property>
    <offset>1</offset>
    <factor>-0.2</factor>
   </volume>
  </combustion0>
  <spoolup0>
   <name>Avon spooling up</name>
   <path>Aircraft/Lightning/Sounds/avon_spoolup.wav</path>
   <property>/sim/model/lightning/engines/engine[0]/starting</property>
   <orientation>
    <x>0.0</x>
    <y>0.0</y>
    <z>180.0</z>
    <inner-cone>180.0</inner-cone>
    <outer-cone>360.0</outer-cone>
    <outer-gain>0.2</outer-gain>
   </orientation>
   <volume>
    <property>/sim/current-view/internal</property>
    <offset>1</offset>
    <factor>-0.6</factor>
   </volume>
  </spoolup0>
  <engine>
   <name>internal whine</name>
   <path>Aircraft/Lightning/Sounds/avon_idle_low.wav</path>
   <mode>looped</mode>
   <condition>
    <and>
      <equals>
        <property>/sim/current-view/internal</property>
        <value type="bool">true</value>
      </equals>
      <greater-than>
        <property>/engines/engine[0]/n1</property>
        <value>1</value>
      </greater-than>
    </and>
   </condition>
   <orientation>
    <x>0.0</x>
    <y>-5.0</y>
    <z>0.0</z>
    <inner-cone>50.0</inner-cone>
    <outer-cone>180.0</outer-cone>
    <outer-gain>0.0</outer-gain>
   </orientation>
   <pitch>
    <property>/engines/engine[0]/n1</property>
    <factor>0.01</factor>
    <max>0.8</max>
   </pitch>
   <volume>
    <max>0.4</max>
   </volume>
  </engine>
  <engine-outside>
   <name>external whine</name>
   <path>Aircraft/Lightning/Sounds/avon_idle_low.wav</path>
   <mode>looped</mode>
   <condition>
    <and>
      <equals>
        <property>/sim/current-view/internal</property>
        <value type="bool">false</value>
      </equals>
      <greater-than>
        <property>/engines/engine[0]/n1</property>
        <value>1</value>
      </greater-than>
    </and>
   </condition>
   <orientation>
    <x>0.0</x>
    <y>-5.0</y>
    <z>0.0</z>
    <inner-cone>50.0</inner-cone>
    <outer-cone>180.0</outer-cone>
    <outer-gain>0.0</outer-gain>
   </orientation>
   <pitch>
    <property>/engines/engine[0]/n1</property>
    <factor>0.01</factor>
    <max>0.8</max>
   </pitch>
  </engine-outside>
  <reheat>
   <name>reheat</name>
   <path>Sounds/rumble.wav</path>
   <mode>looped</mode>
   <property>engines/engine[0]/augmentation</property>
   <orientation>
    <x>0.0</x>
    <y>0.0</y>
    <z>180.0</z>
    <inner-cone>180.0</inner-cone>
    <outer-cone>360.0</outer-cone>
    <outer-gain>0.2</outer-gain>
   </orientation>
  </reheat>
<!-- No. 2 -->

  <avpin1>
   <name>AVPIN pump1</name>
   <path>Aircraft/Lightning/Sounds/avpin_pump.wav</path>
   <property>/sim/model/lightning/engines/engine[1]/avpin_flowing</property>
   <orientation>
    <x>0.0</x>
    <y>0.0</y>
    <z>180.0</z>
    <inner-cone>180.0</inner-cone>
    <outer-cone>360.0</outer-cone>
    <outer-gain>0.2</outer-gain>
   </orientation>
   <volume>
    <property>/sim/current-view/internal</property>
    <offset>1</offset>
    <factor>-0.2</factor>
   </volume>
  </avpin1>

  <combustion1>
   <name>combustion1</name>
   <path>Aircraft/Lightning/Sounds/avpin_combustion.wav</path>
   <property>/sim/model/lightning/engines/engine[1]/combustion</property>
   <orientation>
    <x>0.0</x>
    <y>0.0</y>
    <z>180.0</z>
    <inner-cone>180.0</inner-cone>
    <outer-cone>360.0</outer-cone>
    <outer-gain>0.2</outer-gain>
   </orientation>
   <volume>
    <property>/sim/current-view/internal</property>
    <offset>1</offset>
    <factor>-0.2</factor>
   </volume>
  </combustion1>
  <spoolup1>
   <name>Avon spooling up1</name>
   <path>Aircraft/Lightning/Sounds/avon_spoolup.wav</path>
   <property>/sim/model/lightning/engines/engine[1]/starting</property>
   <orientation>
    <x>0.0</x>
    <y>0.0</y>
    <z>180.0</z>
    <inner-cone>180.0</inner-cone>
    <outer-cone>360.0</outer-cone>
    <outer-gain>0.2</outer-gain>
   </orientation>
   <volume>
    <property>/sim/current-view/internal</property>
    <offset>1</offset>
    <factor>-0.5</factor>
   </volume>
  </spoolup1>
  <engine1>
   <name>internal whine1</name>
   <path>Aircraft/Lightning/Sounds/avon_idle_low.wav</path>
   <mode>looped</mode>
   <condition>
    <and>
      <equals>
        <property>/sim/current-view/internal</property>
        <value type="bool">true</value>
      </equals>
      <greater-than>
        <property>/engines/engine[1]/n1</property>
        <value>1</value>
      </greater-than>
    </and>
   </condition>
   <orientation>
    <x>0.0</x>
    <y>-5.0</y>
    <z>0.0</z>
    <inner-cone>50.0</inner-cone>
    <outer-cone>180.0</outer-cone>
    <outer-gain>0.0</outer-gain>
   </orientation>
   <pitch>
    <property>/engines/engine[1]/n1</property>
    <factor>0.01</factor>
    <max>0.8</max>
   </pitch>
   <volume>
    <max>0.4</max>
   </volume>
  </engine1>
  <engine-outside1>
   <name>external whine1</name>
   <path>Aircraft/Lightning/Sounds/avon_idle_low.wav</path>
   <mode>looped</mode>
   <condition>
    <and>
      <equals>
        <property>/sim/current-view/internal</property>
        <value type="bool">false</value>
      </equals>
      <greater-than>
        <property>/engines/engine[1]/n1</property>
        <value>1</value>
      </greater-than>
    </and>
   </condition>
   <orientation>
    <x>0.0</x>
    <y>-5.0</y>
    <z>0.0</z>
    <inner-cone>50.0</inner-cone>
    <outer-cone>180.0</outer-cone>
    <outer-gain>0.0</outer-gain>
   </orientation>
   <pitch>
    <property>/engines/engine[1]/n1</property>
    <factor>0.01</factor>
    <max>0.8</max>
   </pitch>
  </engine-outside1>
  <reheat1>
   <name>reheat1</name>
   <path>Sounds/rumble.wav</path>
   <mode>looped</mode>
   <property>engines/engine[1]/augmentation</property>
   <orientation>
    <x>0.0</x>
    <y>0.0</y>
    <z>180.0</z>
    <inner-cone>180.0</inner-cone>
    <outer-cone>360.0</outer-cone>
    <outer-gain>0.2</outer-gain>
   </orientation>
  </reheat1>


<!-- Misc -->
  <rumble>
   <name>rumble</name>
   <mode>looped</mode>
   <path>Sounds/rumble.wav</path>
   <condition>
    <or>
     <property>/gear/gear[0]/wow</property>
     <property>/gear/gear[1]/wow</property>
     <property>/gear/gear[2]/wow</property>
    </or>
   </condition>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <factor>.004</factor>
   </volume>
  </rumble>

  <gear>
   <name>gear</name>
   <mode>in-transit</mode>
   <path>Sounds/gear.wav</path>
   <property>/gear/gear[0]/position-norm</property>
   <pitch>
    <internal>dt_play</internal>
    <offset>1.0</offset>
    <factor>-0.001</factor>
   </pitch>
  </gear>

  <gear>
   <name>gear-lock</name>
   <path>Sounds/gear-lck.wav</path>
   <condition>
    <equals>
     <property>/gear/gear[0]/position-norm</property>
     <value>0</value>
    </equals>
   </condition>
  </gear>

  <squeal>
   <name>squeal</name>
   <path>Sounds/squeal.wav</path>
   <condition>
    <or>
     <property>/gear/gear[0]/wow</property>
     <property>/gear/gear[1]/wow</property>
     <property>/gear/gear[2]/wow</property>
    </or>
   </condition>
   <volume>
    <property>/velocities/speed-down-fps</property>
    <factor>0.05</factor>
   </volume>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <factor>0.01</factor>
   </volume>
   <volume>
    <internal>dt_stop</internal>
    <factor>0.05</factor>
    <max>1.0</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.0025</factor>
    <offset>1.2</offset>
   </pitch>
  </squeal>
 
  <flap>
   <name>flaps</name>
   <mode>in-transit</mode>
   <path>Sounds/flaps.wav</path>
   <property>/surface-positions/flap-pos-norm</property>
   <volume>
    <max>0.35</max>
   </volume>
  </flap>

  <seat>
   <name>seat</name>
   <mode>looped</mode>
   <path>Aircraft/Lightning/Sounds/motor.wav</path>
   <condition>
    <equals>
     <property>/controls/seat/vertical-adjust</property>
     <value>1</value>
    </equals>
    <greater-than>
     <property>/systems/electrical/outputs/seat</property>
     <value>1</value>
    </greater-than>
   </condition>
   <pitch>
    <property>/systems/electrical/outputs/seat</property>
    <factor>0.042</factor>
    <offset>0</offset>
   </pitch>
  </seat>


  <wind>
   <name>wind</name>
   <mode>looped</mode>
   <path>Sounds/wind.wav</path>
   <property>/velocities/airspeed-kt</property>
   <volume>
    <property>/position/altitude-ft</property>
    <factor>-0.000015</factor>
    <offset>1.0</offset>
    <min>0.1</min>
    <max>1.0</max>
   </volume>
   <volume>
     <property>/velocities/airspeed-kt</property>
     <factor>0.0015</factor>
     <min>0.03</min>
     <max>0.25</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.01</factor>
    <offset>1.25</offset>
   </pitch>
  </wind>

  <stall>
   <name>stall</name>
   <path>Sounds/stall.wav</path>
   <property>/sim/alarms/stall-warning</property>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <max>0.3</max>
   </volume>
   <pitch>
    <max>0.5</max>
   </pitch>
  </stall>

  <ventraltank>
    <name>Ventral Tank Release</name>
    <path>/Aircraft/Lightning/Sounds/clunk.wav</path>
    <property>/sim/model/lightning/controls/tank_jettisoned</property>
    <volume>
      <factor>0.5</factor>
    </volume>
  </ventraltank>
 
</fx>
 
</PropertyList>
