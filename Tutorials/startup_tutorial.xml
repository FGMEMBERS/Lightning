<PropertyList>
	<tutorial>
		<name>Engine Start</name>
		<description>This tutorial teaches the Lightning engine start procedure</description>

		<init>
			<set>
				<property>/controls/gear/brake-parking</property>
				<value>1</value>
			</set>
			<set>
				<property>/controls/flight/flaps</property>
				<value>0.0</value>
			</set>
			<set>
				<property>/sim/model/lightning/controls/shut_down</property>
				<value>1</value>
			</set>
			<set>
				<property>/systems/electrical/suppliers/external</property>
				<value>0</value>
			</set>
			<set>
				<property>/controls/engines/engine[0]/cutoff</property>
				<value>0</value>
			</set>
			<set>
				<property>/controls/engines/engine[1]/cutoff</property>
				<value>0</value>
			</set>
			<set>
				<property>/controls/engines/engine[0]/throttle</property>
				<value>0.0</value>
			</set>
			<set>
				<property>/controls/engines/engine[1]/throttle</property>
				<value>0.0</value>
			</set>
			<set>
				<property>/engines/engine[0]/running</property>
				<value>0</value>
			</set>
			<set>
				<property>/engines/engine[1]/running</property>
				<value>0</value>
			</set>
		</init>

		<step>
			<message>
				First, ensure ground power is being supplied.
				Use the checkbox on the Lightning dialogue (TAB key)
			</message>
			<error>
				<message>call up the dialogue with the TAB key and select "External Power"</message>
				<condition>
					<less-than>
						<property>/systems/electrical/suppliers/external</property>
						<value>1</value>
					</less-than>
				</condition>
			</error>
			<exit>
				<condition>
					<greater-than>
						<property>/systems/electrical/suppliers/external</property>
						<value>0</value>
					</greater-than>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Ensure the engine shutdown control is in the upright position
				(on LHS of cockpit, on the RH edge of the throttle panel)
			</message>
			<marker>
				<x>3.484</x>
				<y>-0.323</y>
				<z>0.559</z>
			</marker>
			<error>
				<message>Ensure the cutoff switch is vertical</message>
				<condition>
					<greater-than>
						<property>/sim/model/lightning/controls/shut_down</property>
						<value>0</value>
					</greater-than>
				</condition>
			</error>
			<exit>
				<condition>
					<less-than>
						<property>/sim/model/lightning/controls/shut_down</property>
						<value>1</value>
					</less-than>
				</condition>
			</exit>
		</step>

		<step>
			<message>Next, turn on the battery switch located on the right hand switch panel</message>
			<marker>
				<x>3.509</x>
				<y>0.468</y>
				<z>0.632</z>
			</marker>
			<error>
				<message>the battery switch is at the bottom right of the panel, ensure it is on (up)</message>
				<condition>
					<less-than>
						<property>/controls/switches/battery</property>
						<value>1</value>
					</less-than>
				</condition>
			</error>
			<exit>
				<condition>
					<greater-than>
						<property>/controls/switches/battery</property>
						<value>0</value>
					</greater-than>
				</condition>
			</exit>
		</step>

		<step>
			<message>turn on the "Engine start master" switch (also on the right hand switch panel)</message>
			<marker>
				<x>3.4053</x>
				<y>0.4453</y>
				<z>0.6231</z>
			</marker>
			<error>
				<message>Ensure the "Engine Start Master" switch is on (up)</message>
				<condition>
					<less-than>
						<property>/controls/switches/eng_start_master</property>
						<value>1</value>
					</less-than>
				</condition>
			</error>
			<exit>
				<condition>
					<greater-than>
						<property>/controls/switches/eng_start_master</property>
						<value>0</value>
					</greater-than>
				</condition>
			</exit>
		</step>

		<step>
			<message>turn on the "Ignition" switch (also on the right hand switch panel)</message>
			<marker>
				<x>3.441</x>
				<y>0.445</y>
				<z>0.623</z>
			</marker>
			<error>
				<message>Ensure the "Ignition" switch is on (up)</message>
				<condition>
					<less-than>
						<property>/controls/switches/eng_start_master</property>
						<value>1</value>
					</less-than>
				</condition>
			</error>
			<exit>
				<condition>
					<greater-than>
						<property>/controls/switches/ignition</property>
						<value>0</value>
					</greater-than>
				</condition>
			</exit>
		</step>

		<step>
			<message>Move the throttles to the first "Open" position</message>
			<marker>
				<x>3.436</x>
				<y>-0.358</y>
				<z>0.594</z>
				<scale>5</scale>
			</marker>
			<error>
				<message>Open the throttles</message>
				<condition>
					<less-than>
						<property>/controls/engines/engine[0]/throttle</property>
						<value>0.03</value>
					</less-than>
				</condition>
			</error>
			<exit>
				<condition>
					<greater-than>
						<property>/controls/engines/engine[0]/throttle</property>
						<value>0.03</value>
					</greater-than>
				</condition>
			</exit>
		</step>

		<step>
			<message>
				Press and hold the No1 "Engine Start" button for up to two seconds.
				You should hear the AVPIN pump running, then the combustion of the AVPIN,
				followed by the engine spooling up
			</message>
			<marker>
				<x>3.475</x>
				<y>0.442</y>
				<z>0.630</z>
			</marker>
			<error>
				<message>The No1 Engine Start button is directly below the "Ignition" switch</message>
				<condition>
					<less-than>
						<property>/engines/engine[0]/n1</property>
						<value>2</value>
					</less-than>
				</condition>
			</error>
			<exit>
				<condition>
					<greater-than>
						<property>/engines/engine[0]/n1</property>
						<value>30</value>
					</greater-than>
				</condition>
			</exit>
		</step>

		<step>
			<message>Press and hold the No2 "Engine Start" button for up to two seconds</message>
			<marker>
				<x>3.475</x>
				<y>0.465</y>
				<z>0.639</z>
			</marker>
			<error>
				<message>The No2 Engine Start button is directly above the "Battery" switch</message>
				<condition>
					<less-than>
						<property>/engines/engine[1]/n1</property>
						<value>2</value>
					</less-than>
				</condition>
			</error>
			<exit>
				<condition>
					<greater-than>
						<property>/engines/engine[1]/n1</property>
						<value>30</value>
					</greater-than>
				</condition>
			</exit>
		</step>

		<step>
			<message>turn off the "Engine start master" switch</message>
			<marker>
				<x>3.4053</x>
				<y>0.4453</y>
				<z>0.6231</z>
			</marker>
			<error>
				<message>Ensure the "Engine Start Master" switch is off (down)</message>
				<condition>
					<greater-than>
						<property>/controls/switches/eng_start_master</property>
						<value>0</value>
					</greater-than>
				</condition>
			</error>
			<exit>
				<condition>
					<less-than>
						<property>/controls/switches/eng_start_master</property>
						<value>1</value>
					</less-than>
				</condition>
			</exit>
		</step>

		<step>
			<message>Disconnect external electrical supplies</message>
			<error>
				<message>call up the dialogue with the TAB key and deselect "External Power"</message>
				<condition>
					<greater-than>
						<property>/systems/electrical/suppliers/external</property>
						<value>0</value>
					</greater-than>
				</condition>
			</error>
			<exit>
				<condition>
					<less-than>
						<property>/systems/electrical/suppliers/external</property>
						<value>1</value>
					</less-than>
				</condition>
			</exit>
		</step>

		<end>
			<message>Both engines should now be running</message>
		</end>
	</tutorial>
</PropertyList>
