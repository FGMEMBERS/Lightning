 <consumables>
  <fuel>
   <tank n="0">
    <level-gal_us archive="y">3000</level-gal_us>
   </tank>
   <tank n="1">
    <level-gal_us archive="y">3000</level-gal_us>
   </tank>
  </fuel>
 </consumables>
-->

<nasal>
	<Lightning>
		<file>Aircraft/Lightning/Systems/lightning-electrical.nas</file>
		<file>Aircraft/Lightning/Systems/instrumentation-fine.nas</file>
		<file>Aircraft/Lightning/Systems/lightning-controls.nas</file>
		<file>Aircraft/Lightning/Systems/lightning-lights.nas</file>
		<file>Aircraft/Lightning/Systems/lightning-main.nas</file>
	</Lightning>
</nasal>

<input>
	<keyboard>

		<!-- instant replay -->
		<key n="9">
			<name>Ctrl-I</name>
			<desc>Show configuration dialogue</desc>
			<binding>
				<command>nasal</command>
				<script>Lightning.showDialog()</script>
			</binding>
		</key>


		<!-- instant replay -->
		 <key n="114">
			<name>r</name>
			<desc>Activate the instant replay system.</desc>
			<binding>
				<command>nasal</command>
				<script>Lightning.doReplay();</script>
			</binding>
		</key>

		<!-- Flap controls -->
		<key n="91">
			<name>[</name>	
			<desc>Flaps Up</desc>	
			<binding>
				<command>nasal</command>
				<script>
					Lightning.flaps(0);
				</script>
			</binding>
		</key>
		<key n="93">
			<name>]</name>	
			<desc>Flaps Down</desc>	
			<binding>
				<command>nasal</command>
				<script>
					Lightning.flaps(1);
				</script>
			</binding>
		</key>
		<!-- Airbrake -->
		<key n="2">
			<name>Ctrl-B</name>	
			<desc>Airbrakes</desc>	
			<binding>
				<command>nasal</command>
				<script>
					Lightning.airbrakes();
				</script>
			</binding>
		</key>
	<!-- Radar View -->
		<key n="82">
			<name>R</name>	
			<desc>Radar View</desc>	
			<binding>
				<command>nasal</command>
				<script>
					Lightning.toggle_radar_view(0);
				</script>
			</binding>
		</key>
	</keyboard>
</input>

<instrumentation>
	<radar>
		<range type="int" archive="y">20</range>
	</radar>
</instrumentation>

</PropertyList>
